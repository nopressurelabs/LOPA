!!!
%html{xmlns: "http://www.w3.org/1999/xhtml", :lang => "en"}
  %head
    %title= content_for?(:title) ? "#{yield(:title)} | STOP LOPA" : "Stop the Loving Our Pets Act"
    %base{target: "_parent"}
    %meta{ :charset => "utf-8" }
    %meta{content: (content_for?(:title) ? "#{yield(:title)} | STOP LOPA" : "Stop the Loving Our Pets Act"), property: "og:title"}/
    %meta{content: "Stop the Loving Our Pets Act", property: "og:site_name"}/
    %meta{content: request.url, property: "og:url"}/
    - if content_for?(:meta)
      = yield(:meta)
    - else
      %meta{content: "#{image_path('og-image-default.png')}", property: "og:image"}/
      %meta{content: "Stop the Loving Our Pets Act", property: "og:description"}/
    %link{rel: "icon", type:"image/x-icon", href: "#{image_path('favicon.ico')}"}
    = stylesheet_link_tag "application", params[:controller], :media => "all"
    = csrf_meta_tags


  = yield

= javascript_include_tag "application", "data-turbolinks-track" => true
